{
  "id": "bond",
  "name": "Bond",
  "category": "RWA",
  "description": "债券代币化合约，使用 ISPC 受控机制验证和代币化债券，实现公司债券、政府债券等的链上管理和交易",
  "tags": [
    "standard",
    "rwa",
    "bond",
    "fixed-income",
    "security"
  ],
  "language": "go",
  "level": "standard",
  "entryFile": "main.go",
  "helpers": [
    "rwa",
    "token",
    "market"
  ],
  "parameters": [
    {
      "name": "asset_id",
      "type": "string",
      "required": true,
      "description": "资产ID（TokenizeBond）"
    },
    {
      "name": "total_supply",
      "type": "number",
      "required": true,
      "description": "总供应量（TokenizeBond）"
    },
    {
      "name": "token_id",
      "type": "string",
      "required": true,
      "description": "代币ID"
    },
    {
      "name": "to",
      "type": "address",
      "required": true,
      "description": "接收者地址（TransferBond）"
    },
    {
      "name": "amount",
      "type": "number",
      "required": true,
      "description": "转移数量（TransferBond）"
    }
  ],
  "risks": [
    "需要实现债券验证逻辑（验证服务）",
    "需要实现债券估值逻辑（估值服务）",
    "需要实现利息计算（利率、到期日等）"
  ],
  "prerequisites": [
    "了解 RWA 代币化概念",
    "了解 ISPC 受控外部交互机制",
    "了解债券验证和估值流程"
  ],
  "examples": [
    "wes contract call <contract_address> --function TokenizeBond --params '{\"asset_id\":\"bond_001\",\"total_supply\":1000000,\"token_id\":\"BOND_001\"}'",
    "wes contract call <contract_address> --function TransferBond --params '{\"to\":\"<address>\",\"token_id\":\"BOND_001\",\"amount\":1000}'"
  ],
  "version": "1.0.0",
  "author": "WES Contract SDK Team",
  "license": "Apache-2.0",
  "sdkCompatibility": {
    "go": ">=0.1.0-alpha <0.2.0"
  },
  "sinceSdk": {
    "go": "0.1.0-alpha"
  }
}
